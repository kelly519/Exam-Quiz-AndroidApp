<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.exam_quiz_androidapp_firebase.ui.fragment.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/backMainPage"
            app:destination="@id/mainPageFragment" />
        <action
            android:id="@+id/toHomePage2"
            app:destination="@id/entranceFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.example.exam_quiz_androidapp_firebase.ui.fragment.MainPageFragment"
        android:label="MainPageFragment" >
        <action
            android:id="@+id/toSignUp"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/toEntrance"
            app:destination="@id/entranceFragment" />
    </fragment>
    <fragment
        android:id="@+id/entranceFragment"
        android:name="com.example.exam_quiz_androidapp_firebase.ui.fragment.appfragment.EntranceFragment"
        android:label="fragment_entrance"
        tools:layout="@layout/fragment_entrance" />
</navigation>